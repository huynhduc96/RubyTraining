<%= provide :title, t("sessions.title") %>
<h1><%= t("header.login") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.submit t("header.login"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t "sessions.new_user" %> <%= link_to (t "sessions.sign_up_now"), signup_path %></p>
  </div>
</div>
